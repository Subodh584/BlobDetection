{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Blob Tracker",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": ["blob_tracker.py"],
            "group": {
                "kind": "none",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}
